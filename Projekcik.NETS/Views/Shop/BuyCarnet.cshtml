    <script>
        function buttonPay(value) {
            paypal.Buttons({
                style: {
                    shape: 'rect',
                    color: 'black',
                    layout: 'horizontal',
                    label: 'buynow',

                },
                createOrder: function (data, actions) {
                    return actions.order.create({
                        purchase_units: [{
                            amount: {
                                value: value
                            }
                        }]
                    });
                },
                onApprove: function (data, actions) {
                    return actions.order.capture().then(function (details) {
                        fetch("/account/subscribe?orderID=" + data.orderID, {
                            method: 'POST'
                        });
                        console.log(data, actions);

                    });
                }
            }).render('#paypal-button-container' + value);
        }
    </script>
